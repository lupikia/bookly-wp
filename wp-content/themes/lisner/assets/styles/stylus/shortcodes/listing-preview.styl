/*
 |--------------------------------------------------------------------------
 | 15. Shortcodes / Listing Preview Styles
 |--------------------------------------------------------------------------
 */
body.preview-loaded {
    overflow-y hidden
}

.lisner-listing-preview {
    &-modal {
        position fixed
        top 0
        left 0
        display flex
        justify-content center
        align-items center
        width 100%
        height 100%
        background-color transparentify($theme_color, $theme_color, .7)
        z-index 999
        .listing-preview-modal-close {
            position absolute
            top -10px
            right -10px
            padding rem(5px) rem(6px)
            background-color $error
            border-radius 50%
            box-shadow 0 1px 4px 2px rgba(0, 0, 0, .2)
            font-size 18px
            line-height 1.1
            color $white
            z-index 9999
            cursor pointer
        }
        .lisner-listing {
            &-item {
                width 55%
                margin-bottom 0
                border-top-right-radius 0
                border-bottom-right-radius 0
                @media (min-width 1020px) {
                    width 450px
                    flex 1 1 450px
                }
            }
            &-figure {
                height 254px
            }
            &-content {
                padding rem(30px) rem(36px)
            }
            &-meta {
                margin-bottom rem(18px)
                &:last-child {
                    margin-bottom 0
                }
                &-open,
                &-category {
                    align-items flex-end
                    font-size 13px
                    font-weight 400
                    a {
                        align-items flex-end
                        font-size 13px
                    }
                }
                &-rating {
                    font-weight 400
                }
            }
            &-description {
                margin-bottom rem(35px)
                font-size 15px
                line-height 1.7
                color $font_color
            }
        }
    }
    &-container {
        position relative
        @media (min-width 1020px) {
            width rem(800px)
        }
        @media (max-width 768px) {
            width 90%
        }
    }
    &-wrapper {
        display flex
        @media (max-width 475px) {
            max-height 450px
            overflow-y scroll
        }
        .map-preview {
            border-radius 0 $border-radius $border-radius 0
            @media (min-width 1020px) {
                width 350px
                flex 1 1 350px
            }
            &-loading {
                display flex
                justify-content center
                align-items center
                &::before {
                    content ''
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                    background-color $theme_input_color
                    z-index 999
                }
                &::after {
                    font-family 'Material Icons'
                    content 'place'
                    position absolute
                    font-size 70px
                    z-index 999
                    color transparentify($theme_color, $theme_color, .3)
                    animation: pulse .5s infinite;
                    -webkit-animation: pulse .5s infinite;
                }
            }
        }
    }
}
