/*
 |--------------------------------------------------------------------------
 | 37. Modals / Modal
 |--------------------------------------------------------------------------
 */
/* Modals / modal default */
.modal {
    &-backdrop.show {
        background-color $theme_color
        opacity .7
    }
    &-dialog {
        @media (min-width: 576px) {
            max-width 450px
        }
    }
    &-content {
        padding rem(20px) rem(46px)
    }
    &-header,
    &-footer,
    &-body {
        margin rem(5px) 0
        padding-right 0
        padding-left 0
    }
    &-title {
        font-size 30px
        font-weight 700
        color $font_header_color
    }
    // modal header
    &-header {
        border-color $border-color-light
        .btn-label {
            margin rem(6px) rem(-15px) 0 auto
        }
    }
    // modal body
    &-body {
        padding-bottom rem(25px)
        .form-actions {
            margin-top rem(-10px)
            padding 0 rem(10px)
        }
        .btn-submit-group {
            margin-top rem(35px)
            .btn-lg {
                display flex
                justify-content center
                width 100%
                height 51px
            }
        }
    }
}

// social login
.ajax-auth {
    .alert-danger {
        margin-top 20px
        border-color $error
        color $error-font
    }
}

.lisner-social-login {
    position relative
    margin-top 30px
    .wp-social-login {
        &-widget {
            text-align center
        }
        &-connect-with {
            position relative
            display inline-flex
            justify-content center
            padding 0 10px
            background-color $white
            font-size 16px
            font-weight 700
            text-transform capitalize
            color $font_header_color
        }
        &-provider-list {
            display flex
            flex-direction column
            margin-top 10px
            padding 0
            a {
                display flex
                align-items center
                margin-top 15px
                padding 9px 0
                border-radius $border-radius
                background-color $loader_color
                font-weight 600
                color $white
                &:hover {
                    text-decoration none
                }
                .provider-icon {
                    margin -9px 0
                    padding 9px 16px
                    background-color darken($loader_color, 20%)
                    border-radius $border-radius 0 0 $border-radius
                    font-size 18px
                    & + span {
                        display flex
                        justify-content center
                        padding-right 10px
                        width 100%
                        font-size 18px
                    }
                }
                i {
                    display flex
                    justify-content center
                    align-items center
                    width 32px
                    height 32px
                    border 1px solid
                    border-color $white
                    border-radius 50%
                }
                &.wp-social-login-provider {
                    &-facebook {
                        background-color $facebook
                        .provider-icon {
                            background-color darken($facebook, 20%)
                        }
                    }
                    &-twitter {
                        background-color $twitter
                        .provider-icon {
                            background-color darken($twitter, 20%)
                        }
                    }
                    &-google {
                        background-color $google
                        .provider-icon {
                            background-color darken($google, 20%)
                        }
                    }
                }
            }
        }
    }
    &::before {
        content ''
        position absolute
        top 13px
        left 0
        right 0
        height 1px
        width 100%
        background-color $border-color
    }
}

// close modals button
.modal-close {
    display none
    position absolute
    top -10px
    right -10px
    padding rem(5px) rem(6px)
    background-color $error
    border-radius 50%
    box-shadow 0 1px 4px 2px rgba(0, 0, 0, .2)
    font-size 18px
    line-height 1.1
    color $white
    z-index 9999
    cursor pointer
}

@media (max-width: 1800px) and (min-height: 700px) {
    .modal.show .modal-dialog {
        padding-top 60px
    }
}