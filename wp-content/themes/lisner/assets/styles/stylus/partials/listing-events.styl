/*
 |--------------------------------------------------------------------------
 | 8c. Listing Events Styles
 |--------------------------------------------------------------------------
 */

.listing-single-events {
    .listing-single-event {
        border 1px solid
        border-color $border-color
        border-radius $border-radius
        &:not(:first-child) {
            margin-top 20px
        }
        &-figure {
            position relative
            margin-bottom 0
            border-radius $border-radius $border-radius 0 0
            height 210px
            overflow hidden
            img {
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                object-fit cover
                border-radius $border-radius $border-radius 0 0
            }
        }
        &-date-wrapper {
            display flex
            flex-direction column
            justify-content center
            text-align center
        }
        &-content {
            display flex
            flex-wrap wrap
            justify-content space-between
            padding 35px 20px 0 20px
            &__title {
                h5 {
                    margin-top -5px
                    line-height 1.3
                }
            }
            &__description {
                p {
                    font-size 15px
                    line-height 1.7
                    a {
                        display inline-flex
                        justify-content center
                        align-items center
                        font-size 14px
                        &:hover {
                            color $primary
                            text-decoration none
                        }
                        i {
                            margin-left 3px
                            font-size 16px
                        }
                    }
                }
            }
            &__date {
                flex 0 0 22%
                max-width 22%
                .date {
                    &__content {
                        display flex
                        flex-direction column
                        padding 14px 0
                        background-color $theme_input_color
                        border 1px solid
                        border-color $border-color
                        border-radius $border-radius
                    }
                    &__month {
                        font-size 14px
                        text-transform uppercase
                        color $font_header_color
                        line-height 1
                    }
                    &__day {
                        font-size 37px
                        font-weight 700
                        color $font_header_color
                        line-height 1
                    }
                    &__time {
                        margin-top 5px
                        font-size 14px
                        font-weight 700
                        color #be2c42
                    }
                }
            }
            &__inner {
                flex 0 0 73%
                max-width 73%
            }
            &__actions {
                display flex
                justify-content space-between
            }
        }
        &-footer {
            display flex
            margin 0 -20px
            padding 20px
            width calc(100% + 40px)
            border-top 1px solid
            border-color $border-color
            .listing-single-event-content {
                &__actions {
                    display flex
                    justify-content space-between
                    align-items center
                    width 100%
                }
                &__tickets,
                &__attendees {
                    flex 0 0 48%
                    max-width 48%
                    a {
                        display flex
                        align-items center
                        padding 11px 7px
                        height 44px
                        background-color transparent
                        border 1px solid
                        border-color $border-color
                        border-radius $border-radius
                        font-size 16px
                        font-weight 400
                        color $font_header_color
                    }
                }
                &__attendees {
                    a {
                        .thumb-up {
                            margin-right 7px
                            font-size 18px
                            color $stars
                        }
                        .going-count {
                            display flex
                            justify-content center
                            align-items center
                            margin-left auto
                            padding 0 8px
                            background-color $primary
                            border-radius $border-radius
                            font-size 14px
                            color $white
                        }
                    }
                }
                &__tickets {
                    a {
                        justify-content center
                        padding 11px 3px
                        background-color #4b9d55
                        border-color #4b9d55
                        text-align center
                        color $white
                        i {
                            position relative
                            left -7px
                            font-size 18px
                            color $white
                        }
                    }
                }
            }
        }
    }
}

@media (max-width 1300px) and (min-width 1000px) {
    .listing-single-events .listing-single-event {
        position relative
    }

    .listing-single-events .listing-single-event-content__date {
        position absolute
        top 10px
        left 10px
        flex 0 0 30%
        max-width 30%
        .listing-single-event-date-wrapper {
            padding 5px 20px
            background-color $white
            border-radius $border-radius
            .date__content {
                padding 0
                background-color transparent
                border none
                border-radius 0
            }
        }
    }

    .listing-single-events .listing-single-event-footer .listing-single-event-content__actions {
        flex-wrap wrap
    }

    .listing-single-events .listing-single-event-footer .listing-single-event-content__attendees,
    .listing-single-events .listing-single-event-footer .listing-single-event-content__tickets,
    .listing-single-events .listing-single-event-content__inner {
        flex 0 0 100%
        max-width 100%
    }

    .listing-single-events .listing-single-event-footer .listing-single-event-content__tickets {
        margin-top 5px
    }
}

@media (max-width 480px) {
    .listing-single-events .listing-single-event {
        position relative
    }

    .listing-single-events .listing-single-event-content__date {
        position absolute
        top 10px
        left 10px
        flex 0 0 30%
        max-width 30%
        .listing-single-event-date-wrapper {
            padding 5px 20px
            background-color $white
            border-radius $border-radius
            .date__content {
                padding 0
                background-color transparent
                border none
                border-radius 0
            }
        }
    }

    .listing-single-events .listing-single-event-footer .listing-single-event-content__actions {
        flex-wrap wrap
    }

    .listing-single-events .listing-single-event-footer .listing-single-event-content__attendees,
    .listing-single-events .listing-single-event-footer .listing-single-event-content__tickets,
    .listing-single-events .listing-single-event-content__inner {
        flex 0 0 100%
        max-width 100%
    }

    .listing-single-events .listing-single-event-footer .listing-single-event-content__tickets {
        margin-top 5px
    }
}

.dismiss-event-modal {
    display inline-flex
    align-items center
    max-width 90px
    i {
        position relative
        top 1px
        margin-left 3px
        font-size 18px
    }
    &:hover {
        color $primary
        text-decoration none
    }
}