/*
 |--------------------------------------------------------------------------
 | 16. Pages / Default Page Styles
 |--------------------------------------------------------------------------
 */

.vc-active:not(.page-template-tpl-page-narrow) {
    .page-default {
        > .col-sm-12 {
            padding 0
        }
        .main-content {
            top 0
            padding 0
        }
    }
}

.page-default {
    background-color $theme_light
    .main-content {
        position relative
        top rem(-60px)
        padding rem(40px)
        background-color $white
        border-radius $border-radius
        box-shadow $box-shadow-listing
        &.lisner-packages {
            background-color transparent
            box-shadow none
        }
        &-page-default {
            h1,
            h2,
            h3,
            h4,
            h5,
            h6,
            p {
                margin-bottom rem(20px)
            }
            p {
                font-size 18px
                line-height 1.5
            }
        }
    }
    &-unit {
        .main-content {
            top 0
            margin rem(80px) 0
        }
    }
}

/* page hero section */
.header-hero {
    position relative
    padding rem(110px) 0
    background-color $theme_color
    &-image {
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-repeat no-repeat
        background-size cover
    }
    &.last-option {
        .header-hero-image {
            opacity .8
            &::before {
                content ''
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background-color transparentify($theme_color, $theme_color, .4)
            }
        }
    }
    &-inner {
        position relative
        h1, h2, h3, h4, h5, h6, p, a, li, li a {
            color $white
        }
        h1 {
            font-size 48px
            strong {
                font-weight 700
            }
        }
        p {
            font-size 26px
        }
        &.container-default {
            .header-hero-title {
                top auto
            }
        }
        &:not(.hero-listing) {
            text-align center
        }
    }
    &-title {
        position relative
        top 0
    }
    &-unit {
        padding rem(30px) 0
        background-color #f7f7f7
        border-bottom 1px solid
        border-color $border-color
        box-shadow 0 0 3px 0 rgba(0, 0, 0, .1)
        .header-hero-title {
            top auto
            .page-hero-title {
                font-weight 700
                color $font_header_color
            }
        }
    }
}

.page-header-form {
    .hero-search-field {
        &-button {
            .btn-small {
                margin-left rem(5px)
                padding rem(8px) rem(12px)
                width auto
                min-width rem(48px)
                height rem(40px)
                i {
                    pointer-events none
                }
            }
        }
    }
}

.page-unit:not(.search):not(.archive) .header-hero {
    height 300px
    & + .page-default-unit {
        .main-content {
            position relative
            margin 0
            top -150px
        }
    }
}
