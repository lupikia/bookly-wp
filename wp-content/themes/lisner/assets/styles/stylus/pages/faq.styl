/*
 |--------------------------------------------------------------------------
 | 19. Pages / FAQ Page Styles
 |--------------------------------------------------------------------------
 */

.page-template-tpl-faq {
    .faq-content {
        margin rem(50px) 0
    }
    .card {
        margin-bottom 3px
        background-color $theme_input_color
        border-bottom 1px solid
        border-color $border-color
        border-radius $border-radius
        &:not(:first-of-type):not(:last-of-type),
        &:first-of-type {
            border-bottom 1px solid
            border-color $border-color
            border-radius $border-radius
        }
    }
    .card-header {
        display flex
        align-items center
        padding 0
        padding-right 1.25rem
        background-color transparent
        border none
        button {
            padding .75rem 1.25rem
            width 100%
            height 100%
            background-color transparent
            border none
            box-shadow none
            font-size 24px
            font-weight 700
            text-align left
            line-height 1
            color $font_header_color
            &:focus,
            &:active,
            &:hover {
                background-color transparent
                border none
                box-shadow none
                text-decoration none
            }
        }
        i {
            position absolute
            right rem(20px)
            font-size 18px
            color $font_header_color
            pointer-events none
            cursor pointer
        }
    }
    .card-body {
        font-size 18px
    }
    .faq-button-text {
        color $font_header_color
        text-align center
    }
    .faq-button {
        margin-top rem(60px)
        margin-bottom rem(40px)
        .btn {
            padding rem(12px)
            font-size 18px
            font-weight 600
            box-shadow none
        }
    }
}
