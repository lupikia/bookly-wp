/*
 |--------------------------------------------------------------------------
 | 11. Shortcodes / Taxonomy Styles
 |--------------------------------------------------------------------------
 */
.title-block {
    margin-bottom rem(30px)
    .theme-title {
        margin-bottom rem(20px)
        font-size 36px
    }
    .theme-subtitle {
        font-size 18px
        line-height 1.5
        color $theme_subtitle
    }
}

.lisner-taxonomy {
    &.theme-spacing {
    }
    &-wrapper {
        display flex
        flex-wrap wrap
        justify-content space-between
    }
    &-item {
        position relative
        margin-bottom rem(20px)
        height 420px
        background-size cover
        background-repeat no-repeat
        border-radius $border-radius
        overflow hidden
        transition()
        &::before {
            content ''
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            background-color #000
            opacity 0
            transition()
        }
        &:hover {
            &:before {
                opacity .1
                transition()
            }
        }
        &-overlay {
            position absolute
            top 0
            left 0
            width 100%
            height 100%
        }
        a {
            position relative
            display flex
            justify-content center
            align-items center
            width 100%
            height 100%
            font-size 36px
            font-weight 700
            text-align center
            color $white
            &:hover {
                color $white
                text-decoration none
            }
        }
        &-count {
            position absolute
            display flex
            justify-content center
            align-items center
            right rem(20px)
            bottom rem(20px)
            height 35px
            width 35px
            border-radius 50%
            box-shadow 0 0 0 3px transparentify($white, $white, .8)
            font-size 18px
            color transparentify($white, $white, .8)
        }
    }
    &-item-1,
    &-item-4,
    &-item-7 {
        margin-right 0
        width 100%
    }
    &-item-3,
    &-item-6,
    &-item-9 {
        margin-right 0
    }
    &-item-2,
    &-item-3,
    &-item-5,
    &-item-6,
    &-item-8,
    &-item-9 {
        width 49%
        height 275px
    }
    // taxonomy carousel
    &-template-2 {
        margin 0 -15px
        overflow hidden
        .title-block {
            .theme-subtitle {
                color $font_color
            }
        }
    }
    &-slick {
        margin 0 -15px
        padding-top 20px
        visibility hidden
        transition()
        .slick-dots {
            bottom -60px
        }
        .slick-track {
            margin 0 -10px
            .slick-slide {
                margin 0 10px
                opacity .2
                transition()
                &.slick-center + .slick-active + .slick-active {
                    opacity .2
                }
                &.slick-active + .slick-active,
                &.slick-center {
                    opacity 1
                    transition()
                }
            }
        }
        .lisner-taxonomy-item {
            height 440px
            width 360px
            a {
                &:focus {
                    outline 0
                    border none
                    box-shadow none
                }
            }
        }
    }
    // template 3
    &-template-3 {
        .lisner-taxonomy-wrapper {
            justify-content flex-start
        }
        .col-md-4 {
            padding 0 rem(10px)
        }
        .lisner-taxonomy-item {
            height 275px
        }
    }
    // template 4
    &-template-4 {
        .lisner-taxonomy-item {
            height 275px
            border-radius 50%
        }
    }
    // template 5
    &-template-5 {
        .col-md-3 {
            padding 0 rem(10px)
        }
        .lisner-taxonomy-wrapper {
            justify-content flex-start
        }
        .lisner-taxonomy-item {
            height 440px
        }
    }
    // template 6
    &-template-6 {
        .lisner-taxonomy-item {
            height 330px
        }
        .lisner-taxonomy-item-2,
        .lisner-taxonomy-item-3,
        .lisner-taxonomy-item-5,
        .lisner-taxonomy-item-6,
        .lisner-taxonomy-item-8,
        .lisner-taxonomy-item-9 {
            height 235px
        }
        .col-lg-8,
        .col-lg-4 {
            padding 0 rem(10px)
        }
        .lisner-terms-full {
            height 100%
            .lisner-taxonomy-item {
                width 100%
                height auto
            }
        }
    }
    // template 7
    &-template-7 {
        .title-block {
            .theme-subtitle {
                color $font_color
            }
        }
        .col-lg-9 {
            .col-lg-6,
            .col-lg-5 {
                padding 0 25px
                .col-6 {
                    padding 0 25px
                }
            }
        }
        .lisner-taxonomy-text {
            .lisner-taxonomy-item {
                padding-bottom 2px
                height auto
                border-bottom 1px solid
                border-color #ddd
                border-radius 0
                a {
                    flex-direction column
                    align-items flex-start
                    font-size 24px
                    color #404040
                    span.lisner-taxonomy-item-count {
                        position relative
                        right auto
                        bottom auto
                        width auto
                        height auto
                        border none
                        border-radius 0
                        font-size 16px
                        font-weight 400
                        color #404040
                    }
                }
            }
        }
        .lisner-terms-full {
            height 100%
            .lisner-taxonomy-item {
                width 100%
                height auto
            }
        }
    }
    // template 8
    &-template-8 {
        .title-block {
            .theme-subtitle {
                color $font_color
            }
        }
        .col-lg-7 {
            .col-sm-3 {
                padding 0 rem(25px)
            }
        }
        .lisner-taxonomy-text {
            .lisner-taxonomy-item {
                padding-bottom 2px
                height auto
                border-bottom 1px solid
                border-color #ddd
                border-radius 0
                a {
                    flex-direction column
                    align-items flex-start
                    font-size 24px
                    color #404040
                    span.lisner-taxonomy-item-count {
                        position relative
                        right auto
                        bottom auto
                        width auto
                        height auto
                        border none
                        border-radius 0
                        font-size 16px
                        font-weight 400
                        color #404040
                    }
                }
            }
        }
    }
}

// taxonomies for specific page templates
.page-template-default,
.page-template-tpl-page-alternate {
    .slick-slider:not(.lisner-listings-slick) {
        margin 0 rem(-55px)
    }
    .lisner-taxonomy-slick .slick-track .slick-slide {
        margin 0 5px
    }
    .lisner-taxonomy-template-4 .lisner-taxonomy-item {
        height 256px
    }
}
