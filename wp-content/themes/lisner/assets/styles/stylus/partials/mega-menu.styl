/*
 |--------------------------------------------------------------------------
 | 8. Mega Menu Styles
 |--------------------------------------------------------------------------
 */

body .header .pbs-navbar.navbar .navbar-collapse {
    li.menu-item-object-pebas_mega_menu {
        @media (min-width: 1030px) {
            &:hover {
                .mega-menu-container {
                    display block
                    animation fadeInUp 150ms ease-in-out both
                }
            }
        }
    }
    .mega-menu-container {
        display none
        position absolute
        padding-top 10px
        top 30px
        right 0
        z-index 2
        &.active {
            display block
        }
        @media (min-width: 1024px) {
            min-width 925px
        }
        @media (max-width: 1024px) {
            min-width 100%
        }
        .mega-menu-nav {
            position relative
            background-color $white
            border-radius $border-radius
            box-shadow $box-shadow-listing
            .mega-menu-close {
                position absolute
                top 0
                right 0
                display flex
                justify-content center
                align-items center
                width 28px
                height 28px
                background-color $error
                border-radius $border-radius 0 0 $border-radius
                font-size 20px
                color $white
                cursor pointer
                z-index 999
            }
        }
        // video
        .mega-menu-item-video {
            position relative
            display flex
            justify-content center
            align-items center
            height 280px
            background-color $theme_color
            .lisner-video-ajax {
                width 100%
            }
            .loader {
                position absolute
            }
            .video-overlay {
                position absolute
                top 0
                left 0
                display flex
                justify-content center
                align-items center
                width 100%
                height 100%
                cursor pointer
                i {
                    font-size 70px
                    color $white
                }
            }
        }
        .video-preview-loaded {
            margin-top 0
        }
        .tab-content > .tab-pane,
        .pill-content > .pill-pane {
            display: block; /* undo display:none          */
            height: 0; /* height:0 is also invisible */
            overflow-y: hidden; /* no-overflow                */
        }
        .tab-content > .active,
        .pill-content > .active {
            height: auto; /* let the content decide it  */
        }
        .mega-menu-gallery {
            max-height 285px
            overflow hidden
            .slick-arrow {
                z-index 99
                &::before {
                    font-size 28px
                }
            }
            .slick-prev {
                left 10px
            }
            .slick-next {
                right 18px
            }
        }
        .col-3,
        .col-9 {
            padding 0
        }
        ::-webkit-scrollbar {
            width 1px
        }
        /* Track */
        ::-webkit-scrollbar-track {
            background transparentify($primary, $primary, .1)
            border-radius 10
        }
        /* Handle */
        ::-webkit-scrollbar-thumb {
            background $primary
        }
        // mega menu nav
        .nav-pills {
            display block
            margin 15px 1px
            max-height 285px
            overflow-y auto
            li {
                padding 0
                a {
                    display flex
                    padding 4px 20px
                    width 100%
                    border-radius 0
                    font-size 16px
                    font-weight 400
                    color $font_color
                    //cursor default
                    &.active {
                        background-color transparentify($primary, $primary, .1)
                    }
                    small {
                        margin-left 3px
                        color $primary
                    }
                }
            }
        }
        // mega menu content
        .mega-menu-item {
            padding 10px
            max-width 695px
            a {
                position relative
                z-index 1
            }
            &-figure {
                position relative
                margin-bottom 0
                border-radius 0 $border-radius $border-radius 0
                overflow hidden
                img {
                    max-width none
                }
            }
            &-preloader {
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background-color $loader_color
                &::after {
                    content ''
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                    background linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 93%, rgba(0, 0, 0, 0.10) 100%)
                }
            }
        }
    }
}

body.logged-in-admin .header .pbs-navbar.navbar {
    .mega-menu-container {
        padding-top 10px
    }
}
