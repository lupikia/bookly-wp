/*
 |--------------------------------------------------------------------------
 | 13. Shortcodes / Posts Styles
 |--------------------------------------------------------------------------
 */
.blog.lisner-post-item {
    align-items flex-start
}

.main-blog {
    padding-top rem(60px)
    padding-bottom rem(130px)
    background-color $theme_light
}

.lisner-post {
    div[class^=col-sm-4] {
        padding rem(7px)
    }
    &-item {
        position relative
        height 100%
        background-color $white
        border-radius $border-radius
        box-shadow $box-shadow-listing
        overflow hidden
        &.post-sticky {
            border-top 6px solid
            border-color $primary
        }
        iframe {
            margin-bottom 0
            max-width 100%
            height 180px
        }
        figure.post-media-video {
            margin-bottom 0
        }
    }
    &-figure {
        margin-bottom 0
        background-color $theme_color
        a {
            position relative
            display block
            height 220px
            img {
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                object-fit cover
            }
            &:hover {
                img {
                    opacity .9
                    transition()
                }
            }
        }
    }
    &-content {
        margin-bottom rem(20px)
        padding rem(25px) rem(20px)
        background-color $white
    }
    &-meta {
        margin-bottom rem(15px)
        a {
            font-size 14px
            color $theme_color
            &:not(:last-child)::after {
                content ','
            }
        }
    }
    &-title {
        margin 0
        margin-bottom rem(20px)
        line-height 1.3
        font-weight 700
        overflow hidden
        text-overflow ellipsis
        a {
            font-weight 700
            font-size 28px
            line-height 1.2
            color $font_header_color
            &:hover {
                text-decoration none
            }
        }
    }
}

@media (max-width: 430px) {
    .posts-category-filter .breadcrumb {
        margin-bottom 20px
    }
}

.blog-posts-row {
    div[class^=col-xl-] {
        margin-bottom 20px
        padding-left rem(8px)
        padding-right rem(8px)
        @media (max-width: 430px) {
            &:not(:first-of-type) {
                padding-left rem(15px)
            }

            &:not(:last-of-type) {
                padding-right rem(15px)
            }

            &:last-of-type {
                margin-bottom 0
            }
        }
    }
    & + .blog-posts-row {
        margin-top rem(30px)
    }
}

.pagination-row {
    margin-top rem(40px)
    margin-bottom rem(40px)
}

.breadcrumb {
    margin-bottom rem(50px)
    padding 0
    background-color transparent
    ol {
        margin-bottom 0
        li {
            &.home-cat {
                i {
                    margin-right rem(10px)
                    vertical-align sub
                    font-size 18px
                    color $quinary
                }
            }
            &.active {
                a {
                    color $font_header_color
                }
            }
            a {
                font-size 16px
                color $font_color_light
                &:hover {
                    text-decoration none
                    color $font_header_color
                }
            }
        }
    }
}

#carousel-gallery {
    .carousel-item {
        img {
            display block
            margin 0 auto
            text-align center
        }
    }
}

.comment {
    list-style-type none
}

.archive,
.page-unit {
    .lisner-post-item {
        overflow visible
    }
    .lisner-post-figure {
        a {
            height auto
            img {
                position relative
            }
        }
    }
}

.posts.no-posts {
    padding 30px
    width 100%
    background-color $white
    border-radius $border-radius
    box-shadow $box-shadow-listing
    h5 {
        margin-bottom 0
    }
}
